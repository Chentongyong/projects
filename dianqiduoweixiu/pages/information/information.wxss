.big_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.information_nav_box{
  width: 100%;
  height: 8%;
  display: flex;
}
.information_nav{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: #BBBBBB;
  padding: 15rpx 0;
  box-sizing: border-box;
} 
.information_nav_temporary{
  width: 20%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: #129CA3;
  font-weight: 600;
  padding: 15rpx 0;
  box-sizing: border-box;
} 
.information_nav_img{
  width: 40rpx;
  height: 6rpx;
}


/* 数据 */
.information_dataList_box{
  width: 100%;
  height: 92%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background: #f7f7f7;
  overflow: scroll;
}
.information_data_box{
  width: 100%;
  height: 240rpx;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  display: flex;
  margin-bottom:20rpx; 
}
.information_data{
  width: 450rpx;
  height: 100%;
  padding-right:45rpx; 
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}
.information_data_img{
  width: 200rpx;
  height: 200rpx;
}
.information_data_titlo{
  font-size: 30rpx;
 
  color: #333; 
  
font-weight: 900;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 1;
-webkit-box-orient: vertical;

}
.information_data_describe{
  width: 100%;
  height: 72rpx;
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin: 22rpx 0 48rpx;
}
.information_data_operate{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.data_operate_icon_box{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.data_operate_icon{
  width: 28rpx;
  height: 28rpx;
}