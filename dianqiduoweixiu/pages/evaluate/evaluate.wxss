}
.uploading_box{
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: start;
}
.submit{
  margin-top: 76rpx;
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
