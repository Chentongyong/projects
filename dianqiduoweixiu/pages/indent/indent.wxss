.big_box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f7f7f7;
  padding-bottom: 112rpx;
  box-sizing: border-box;
  overflow: scroll;
}

.shipping_address_box {
  width: 100%;
  height: 228rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-top: 15rpx solid #f7f7f7;
  background: #fff;
}

.userinfo {
  width: 100%;
  display: flex;
  align-items: center;
  color: #333;
  font-size: 30rpx;
  font-weight: 900;
  overflow: hidden;
  text-overflow: ellipsis;
  /* display: -webkit-box; */
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.phone {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.shipping_address_message {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.message_icon {
  width: 12rpx;
  height: 22rpx;
}

.segmentation {
  width: 100%;
  height: 10rpx;
}

.segmentation_box {
  width: 100%;
  border-bottom: 15rpx solid #f7f7f7;
  background: #fff;
}

.merchandise_news_box {
  padding: 30rpx;
  border-bottom: 15rpx solid #f7f7f7;
  background: #fff;
}

.merchandise_news_titlo {
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  font-weight: 600;
  color: #333;
  width: 100%;
}

.merchandise_news {
  width: 100%;
  height: 160rpx;
  display: flex;
}

.merchandise_news_img {
  width: 160rpx;
  height: 160rpx;
}

.merchandise_news_message {
  width: 530rpx;
  height: 100%;
  padding-left: 25rpx;
  box-sizing: border-box;
}

.merchandise_news_name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 900;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.merchandise_news_style {
  font-size: 24rpx;
  color: #999;
}

.select_quantity_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.advance_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 80rpx;
  font-size: 26rpx;
  color: #333;
}

.balance_payment_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  margin-top: 45rpx;
}

.discount_box {
  width: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 15rpx solid #f7f7f7;
}

.discount {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.discount_coupon_subtract {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrows {
  width: 12rpx;
  height: 22rpx;
}

.img_icon {
  width: 34rpx;
  height: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 30rpx;
}

.uniterming {
  width: 100%;
  height: 100%;
}

.order_information_box {
  width: 100%;
  height: 268rpx;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 16rpx solid #f7f7f7;
}

/* 订单信息 */

.order_information_title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.order_information_message {
  font-size: 26rpx;
  color: #666;
}

/* 支付 */

.payment_box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 112rpx;
  display: flex;
}

.payment_six {
  width: 60%;
  height: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 28rpx;
  color: #999;
}

.payment_money {
  color: #eb442e;
  font-weight: 600;
}

.payment_four {
  width: 40%;
  height: 100%;
  background: #eb442e;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

/* 拼团全款 */

.total_payment_box {
  width: 100%;
  height: 94rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  margin-top: 50rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.dz_icon {
  width: 60rpx;
  height: 32rpx;
  margin-left: 16rpx;
}
