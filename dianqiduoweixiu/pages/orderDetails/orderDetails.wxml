<view class="big_box">

  <view class="order_status" wx:for="{{zt}}" wx:key="index" wx:if="{{ztma==index}}"> 
    <view class="order_status_titlo">
       <view class="order_dai">{{item.zt}}</view>
       <view>{{item.sy}} {{item.sj}}</view>
    </view>
    <image class="order_status_img" src="{{item.src}}"></image>
  </view>


  <view class="group_booking_box" wx:if="{{ztma == 1}}">
    <view class="group_booking">拼团中，还差3人组团成功</view>
    <view class="item_text ale">分享给好友群，成功率更高哦</view>
    <van-count-down
      use-slot
      time="{{ time }}"
      bind:change="onChange">
      
      <text class="item_text">剩余</text>
      <text class="item">{{ timeData.days }}</text><text class="item_text">天</text>
      <text class="item">{{ timeData.hours }}</text><text class="item_text">时</text>
      <text class="item">{{ timeData.minutes }}</text><text class="item_text">分</text>
      <text class="item">{{ timeData.seconds }}</text><text class="item_text">秒</text>
    </van-count-down>
  </view>

  <view class="group_booking_box" wx:if="{{ztma == 6}}">
    <view class="group_booking">拼团失败</view>
    <view class="item_text ale">欢迎您的下次光临~</view>
    
  </view>

  <view class="user_img_box" wx:if="{{ztma == 1||ztma == 6}}">
    <image class="user_img" wx:for="{{user_img}}" src="{{item}}"></image>
  </view>



  <view class="shipping_address_box">
    <view class="userinfo">拓冠科技</view>
    <view>
      <view class="phone">13437530948</view>
      <view class="shipping_address_message">
        <view>广州市天河区前进街道东英商务园D栋211-212</view>  
        
      </view>
    </view>
  </view>
 

  <view class="merchandise_news_box" wx:for="{{list}}" wx:key="index">
    <view class="merchandise_news_titlo">商品信息</view>
    <view class="merchandise_news">
      <image class="merchandise_news_img" src="../../images/shohin.png"></image>
      <view class="merchandise_news_message">
        <view class="merchandise_news_name">{{item.name}}</view>
        <view class="merchandise_news_style">{{item.gg}}</view>
        <view class="select_quantity_box">
          <view>￥{{item.jine}}</view>
          
          <text>×{{item.num}}</text>
        </view>
      </view>
    </view>

    <view class="total_payment_box" wx:if="{{total_payment == 1}}"><!--拼团时全款购买-->
      <text style="color:#666;">全款</text>
      <text>￥{{item.jine}}</text>
    </view>

    <view class="advance_box" wx:if="{{total_payment == 0}}">
      <text>定金</text>
      <text>￥200</text>
    </view>
    <view class="balance_payment_box" wx:if="{{total_payment == 0}}">
      <text>尾款</text>
      <text>￥1980</text>
    </view>
  </view>



  <view class="discount_box" wx:if="{{ztma != 1&&ztma!=6&&ztma!=7}}">
    <view class="discount">
      <view>优惠券</view>
      <view class="discount_coupon_subtract">
        <text>-￥50</text>
      </view>
    </view>

    <view class="discount" style="margin-top:45rpx;">
      <view>积分抵扣</view>
      <view class="discount_coupon_subtract">
        <text>-￥10</text>
        
      </view>
    </view>
  </view>

  <view class="order_information_box">
    <view class="order_information_title">订单信息</view>
    <view class="order_information_message">
      <text style="margin-right:40rpx;">订单编号</text>
      <text>123456789</text>
    </view>
    <view class="order_information_message">
      <text style="margin-right:40rpx;">下单时间</text>
      <text>2019-11-29 12:00</text>
    </view>
    <view class="order_information_message" wx:if="{{ztma != 0&&ztma != 3}}">
      <text style="margin-right:40rpx;">支付时间</text>
      <text>2019-11-29 12:00</text>
    </view>
    <view class="order_information_message" wx:if="{{ztma == 3}}">
      <text style="margin-right:40rpx;">支付定金时间</text>
      <text>2019-11-29 12:00</text>
    </view>
    <view class="order_information_message" wx:if="{{ztma == 3&&wuwu==1}}"><!--wuwu是后台的值判断是否支付过尾款-->
      <text style="margin-right:40rpx;">支付尾款时间</text>
      <text>2019-11-29 12:00</text>
    </view>
  </view>


  <view class="deal_with_box">
    <view class="deal_with" wx:if="{{ztma == 2 || ztma == 1|| ztma == 7}}"></view>
    <view wx:if="{{ztma == 4||ztma==5||ztma==6}}"></view>
    <view class="deal_with" wx:if="{{ztma == 0||ztma == 3 }}">
      <text class="deal_with1">应付:</text>
      <text class="deal_with2">￥200</text>
    </view>
    <view class="zhifu" wx:if="{{ztma == 0}}">去支付</view>
    <view class="zhifu" wx:if="{{ztma == 3}}">支付</view>
    <button class="yaoqing" open-type="share" wx:if="{{ztma == 1}}">邀请好友</button>
    <view class="grey" wx:if="{{ztma == 2||ztma == 7}}">查看物流</view>
    <view class="yaoqing" wx:if="{{ztma == 2||ztma == 7}}">确认收货</view>
    <view class="yiwc" wx:if="{{ztma == 4||ztma== 5}}">
      <view class="grey"  wx:if="{{ztma == 5}}">删除订单</view>
      <view class="grey">查看评价</view>
      <view class="grey">服务预约</view>
      <view class="yaoqing" wx:if="{{ztma == 4}}">去评价</view>
    </view>
    <view class="grey" wx:if="{{ztma == 6}}">删除订单</view>

  </view>
</view>