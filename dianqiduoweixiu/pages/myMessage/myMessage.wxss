.big_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}
.my_message_data{
  width: 100%;
  height: 424rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom:15rpx; 
}
.my_message_titlo_box{
  width: 100%;
  display: flex;
  padding-top: 35rpx;
  box-sizing: border-box;
}
.my_message_box{
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left:20rpx; 
  margin-bottom:30rpx; 
}
.my_img{
  height: 60rpx;
  width: 60rpx;
}
.my_name{
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}
.my_message_time{
  font-size: 24rpx;
  color: #999999;
}
.my_message_name_box{
  width: 100%;
  display: flex;
  justify-content: space-between;

}
.my_message_text{
  font-size: 28rpx;
  color: #666;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}

.message_corresponding_to_the_commodity{
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #f7f7f7;
  display: flex;
}
.commodity_img{
  width: 160rpx;
  height: 160rpx;
  margin-right:20rpx; 
}
.commodity_message_box{
  width: 470rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.commodity_message{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.commodity_name{
  font-size: 28rpx;
  color: #333;
  margin-bottom:15rpx; 
}
.message_text{
  font-size: 24rpx;
  color: #999;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
}
.commodity_prices{
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}
.new_message{
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  background: red;
  margin-left: 20rpx;
}