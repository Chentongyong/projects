            </view>
            <view class="buy_soon_discount">
              <view class="pcice_now">￥ {{item.now}}</view>
              <view class="buy_soon_btn">
                立即购买
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="space"></view>



  <view class="comment" style="margin-bottom:60rpx;">
    <view class="normal">
      <view class="buy_soon_list">
        <view class="buy_soon_item" wx:for="{{buy_soon_list}}" wx:key="index" bindtap="time_limit">
          <view class="buy_soon_item_img_box">
