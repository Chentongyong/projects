    <view class="normal" style="margin-bottom:70rpx">
      <view class="buy_soon_list">
        <view class="buy_soon_item" wx:for="{{buy_soon_list}}" wx:key="index" bindtap="group">
          <view class="buy_soon_item_img_box">
