          <view class="buy_soon_item_price_box">
            <view class="buy_soon_item_price">￥{{item.price}}</view>
            <view class="buy_soon_item_num">销量：{{item.num}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 优惠团购 -->

  <view class="comment">
    <view class="normal">
      <view class="title_box">
        <view class="title">
          <text>优惠团购</text>
        </view>
        <view class="check_more_box" bindtap="dint_more">
          <text>查看更多</text>
          <image class="check_more" src="{{check}}" mode="aspectFit" />
        </view>
      </view>
    </view>
  </view>
  <view class="comment">
    <view class="normal">
      <view class="title_span">限时优惠大放送，超多优惠等你来</view>
    </view>
  </view>



