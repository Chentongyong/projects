  <view class="space"></view>
  <view class="comment">
    <view class="normal" style="background:#f7f7f7;">
      <view class="sorting_box">
        <view class="{{sortingIndex == index?'sorting2':'sorting'}}" wx:for="{{sorting}}" wx:key="index" bindtap="sorting" data-index="{{index}}">{{item}}</view>
      </view>
    </view>
  </view>

  <view class="space"></view>



  <view class="comment">
    <view class="normal">
      <view class="buy_soon_list">
        <view class="buy_soon_item2 yy" wx:for="{{buy_soon_list2}}" wx:key="index" bindtap="product">
