.big_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%; 
  background: #f7f7f7;
}
.tab_box{
  width: 100%;
  height: 7%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-bottom: 15rpx solid #f7f7f7;
  background: #fff;
}
.tab{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  color: #bbb;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.tab_color{
  color: #129CA3;
}
.tab_img{
  width: 40rpx;
  height: 6rpx;
  background: #129CA3;
  border-radius: 20rpx;
}
.tab_img2{
  width: 40rpx;
  height: 6rpx;
  /* background: #129CA3; */
  border-radius: 20rpx;
}

.datalist_box{
  width: 100%;
  height: 91%;
  overflow: scroll;
}
.data_box{
  width: 100%;
  height: 353rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  margin-bottom:15rpx; 
}
.data{
  width: 100%;
  height: 240rpx;
  padding: 40rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom:1rpx solid #f7f7f7;

}
.data_img{
  width: 160rpx;
  height: 160rpx;
}
.data_message_box{
  width: 510rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.data_message_titlo{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.specification{
  font-size: 24rpx;
  color: #666;
  margin-bottom:25rpx; 
}
.money{
  font-size: 28rpx;
  color: #333;
}
.button_box{
  width: 100%;
  height: 112rpx;
  padding: 22rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row-reverse !important;
}
.state{
  color: #EB442E;
}
.button_red{
  width: 180rpx;
  height: 68rpx;
  border-radius: 10rpx;
  background: #EB442E;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  margin-left:20rpx ;
}
.button_green{
  width: 180rpx;
  height: 68rpx;
  border-radius: 10rpx;
  background: #129CA3;
  display: flex;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  margin: 0 0 0 20rpx ;
  align-items: center;
}
.button_grey{
 width: 180rpx;
  height: 68rpx;
  border-radius: 10rpx;
  background: #F1F2F5;
  display: flex;
  justify-content: center;
  color: #129CA3;
  font-size: 28rpx;
  margin-left:20rpx ;
  align-items: center; 
}