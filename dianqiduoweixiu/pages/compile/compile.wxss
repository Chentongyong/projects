.big_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.titlo{
  width: 100%;
  height: 317rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 15rpx solid #f7f7f7;
  color: #999;
  font-size: 28rpx;
}
.titlo_img{
  width: 150rpx;
  height: 150rpx;
}
.name{
  width: 100%;
  height: 74%;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.name_xg{
  width: 100%;
  height: 126rpx;
  border-bottom: 1rpx solid #f7f7f7;
  display: flex;
  align-items: center;
}
.appellation{
  font-size: 28rpx;
  color: #666;
  margin-right: 60rpx;
}
.appellation_name{
  font-size: 28rpx;
  color: #333
}
.submit{
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #129CA3;
  border-radius: 10rpx;
  color: #fff;
}