.big_box{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.my_wallet_balance_box{
  width: 100%;
  height: 300rpx;
  background: linear-gradient(90deg, #62ceb4, #129ca3);
  padding: 100rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  color: #fff;
  font-size: 28rpx;
}
.my_aggregate_amount_box{
  width: 50%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.my_aggregate_amount_box2{
  width: 50%;
  height: 100%;
  display: flex;
  
  flex-direction: row-reverse;
  justify-content: space-around;
}
.my_aggregate_amount{
  font-weight: 500;
  font-size: 56rpx;
}
.payment_history_box{
  width: 100%;
  height: 808rpx;
  overflow: scroll;
  padding: 30rpx;
  box-sizing: border-box;
}


.integral_trial_record_box{
  width:100%;
  padding: 60rpx 30rpx 158rpx;
  box-sizing: border-box;
}
.integral_trial_record_data{
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;  
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
} 
.integral_trial_record_use{
  display: flex;
  flex-direction: column;
}
.integral_trial_record_use_time{
  font-size: 24rpx;
  color: #999;
  font-weight: 100;
}

.withdraw_deposit{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:98rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #129CA3;
  font-size: 28rpx;
  color: #fff;
}