/* pages/select_store/select_store.wxss */
/* 通用样式 */
.main{
  width: 100%;
  height: auto;
  background-color: #f7f7f7;
}
.comment{
  width: 100%;
  height: auto;
  background-color: #fff;
  display: flex;
  justify-content: center;
}
.normal{
  width: 90%;
  height: auto;
}
/* 搜索栏 */
.search_box{
  width: 100%;
  height: 120rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: center;
  align-items: center;
  /* position: relative; */
}
.input_box{
  width: 90%;
  height: 68rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 5rpx;
  font-size: 26rpx;
  color: #bbb;
}
.search_img{
  width: 28rpx;
  height: 28rpx;
  
}
.search{
  width: 100%;
  height: 100%;
  font-size: 26rpx;
}

/* 门店列表 */
.store_list_box{
  width: 100%;
  height: 200rpx;
  padding: 20rpx 0;
  display: flex;
  align-items: center;
}
.store_img_box{
  width: 150rpx;
  height: 150rpx;
}
.store_intro{
  width: 70%;
  height: 80%;
  margin-left:30rpx;
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
  box-sizing: border-box;
  /* justify-content: space-around; */
}
.store_img{
  width: 100%;
  height: 100%;
}
.store_name{
  
  font-size: 28rpx;
  color: #333;
}
.store_location{
  width: 100%;
  height: 28rpx;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-top: 32rpx;
  margin-bottom: 17rpx;
}
.store_distance{
  width: 100%;
  /* height: 50rpx; */
  font-size: 24rpx;
  font-weight: 500;
  color: #999;
  /* line-height: 50rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
