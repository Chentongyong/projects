/**app.wxss**/
page{
  height: 100%
}
@import "wxParse/wxParse";
.a_row {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden
}

.b_row {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

button:after {
    border: none;
}

button {
    border-radius: 0;
    margin: 0;
    background: transparent;
}

.noMore {
    padding: 40rpx 0;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}

.noHover {
    opacity: 1;
}

.waiting {
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
}

.loading {
    width: 35rpx;
    height: 35rpx;
    margin: auto;
    padding: 30rpx 0;
}

.loading image {
    width: 100%;
    height: 100%;
    display: block;
    margin: auto;
}

.error {
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    filter: grayscale(150%);
    flex-direction: column;
}

.error image {
    width: 40%;
    display: block;
}

.error .tips {
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #999;
}

.search_box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 30rpx 40rpx 0;
    border-bottom: 1rpx solid #999;
}

.search_box .ipt {
    flex: 1;
    overflow: hidden;
    height: 65rpx;
    line-height: 65rpx;
    font-size: 28rpx;
}

.search_box .search_icon {
    width: 36rpx;
    height: 36rpx;
    display: block;
    margin-left: 10rpx;
}

.contact-fixed {
    position: fixed;
    right: 24rpx;
    bottom: 90rpx;
    width: 94rpx;
    height: 94rpx;
    display: block;
    z-index: 98;
}

.contact-fixed .contact-icon {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

page {
    font-family: 'PingFang SC'
}

input {
    height: 50rpx;
}

.login_tips {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100vh;
    flex-direction: column;
}

.login_tips .login_logo {
    width: 30%;
    display: block;
    margin: 0 auto;
}

.login_tips .login_btn {
    display: block;
    width: 320rpx;
    border-radius: 10rpx;
    background: #333;
    font-size: 28rpx;
    color: #fff;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
    margin-top: 50rpx;
}

.login_tips .login_desc {
    font-size: 28rpx;
    color: #666;
    margin-top: 80rpx;
    display: block;
    text-align: center;
    line-height: 42rpx;
}