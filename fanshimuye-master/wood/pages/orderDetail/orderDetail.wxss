/* pages/orderDetail/orderDetail.wxss */

.orderDetail {
    padding-bottom: 160rpx;
}

.order_status {
    padding: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #333;
}

.order_status .left_data {
    flex: 1;
    overflow: hidden;
}

.order_status .left_data .big_status {
    font-size: 30rpx;
    color: #fff;
    font-weight: bold;
}

.order_status .left_data .small_tips {
    font-size: 26rpx;
    color: #fff;
    padding-top: 15rpx;
}

.order_status .status_icon {
    width: 100rpx;
    height: 100rpx;
    display: block;
}

.address_box {
    padding: 30rpx 40rpx;
    border-bottom: 16rpx solid #f6f6f6;
}

.address_box .address_title {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.address_box .address_data {
    padding-top: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.address_box .address_data .link_msg {
    flex: 1;
    overflow: hidden;
}

.address_box .address_data .link_msg .link_data {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    line-height: 40rpx;
    word-wrap: break-word;
    word-break: break-all;
}

.address_box .address_data .link_msg .link_data .link_cell {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}

.address_box .address_data .link_msg .link_data .link_cell:first-child {
    margin-right: 40rpx;
}

.address_box .address_data .link_msg .link_address {
    font-size: 26rpx;
    color: #999;
    padding-top: 15rpx;
}

.goods_msg {
    padding: 40rpx;
}

.order_common_title {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.goods_msg .goods_data {
    display: flex;
    justify-content: space-between;
    margin-top: 35rpx;
}

.goods_msg .goods_data .goods_thumb {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin-right: 25rpx;
}

.goods_msg .goods_data .goods_other {
    flex: 1;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.goods_msg .goods_top {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goods_msg .goods_top .goods_title {
    flex: 1;
    overflow: hidden;
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
}

.goods_msg .goods_price {
    font-size: 28rpx;
    color: #f36449;
    font-weight: bold;
}

.goods_msg .goods_num {
    text-align: right;
    font-size: 28rpx;
    color: #999;
    font-weight: bold;
}

.goods_msg .goods_spec {
    font-size: 28rpx;
    color: #999;
    padding-top: 10rpx;
}

.goods_msg .bottom_price {
