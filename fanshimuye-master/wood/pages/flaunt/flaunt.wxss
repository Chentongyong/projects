.title_box{
    padding: 40rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    font-size:34rpx;
    font-weight: 600;
    color: #333; 
    border-bottom: 14rpx solid #f6f6f6;
}
.title_img{
    width: 120rpx;
    height: 120rpx;
    margin-right: 40rpx;
    border-radius: 50%;
}
.min_icon{
    width: 13rpx;
    height: 22rpx;
    margin-left: 15rpx;
}
.activity{
    display: flex;
    justify-content: space-between;
    width: 515rpx;
    margin-top: 10rpx; 
}
.activity_hont{
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
    display: flex;
    align-items: center;
}
.integral{
    font-size: 26rpx;
    color: #333;
    font-weight: 400;
}

.explain_box{
    padding: 40rpx;
    box-sizing: border-box;
    border-bottom: 14rpx solid #f6f6f6;
}
.explain{
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 30rpx;
}
.explain_hont{
    font-size: 28rpx;
    color: #333;
    margin-bottom: 30rpx;
}
.explain_want{
    display: flex;
    justify-content: center;
    align-items: center;
    width:670rpx;
    height:80rpx;
    background:rgba(51,51,51,1);
    border-radius:5rpx;
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:bold;
    color:rgba(255,255,255,1);
    line-height:40epx;
}
.explain_record{
    padding: 20rpx 0; 
    border-bottom: 1rpx solid #ebebeb;
}
.explain_record_title{
    font-size:28rpx;
    color:rgba(51,51,51,1);
    line-height:48rpx;
}
.explain_record_box{
    padding: 40rpx;
    box-sizing: border-box;
}
.explain_record_time{
    font-size: 24rpx;
    color: #999;
    margin: 10rpx 0 20rpx; 
}
.content {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
	position: relative;
	font-family: 苹方;
	font-size: 28rpx;
	color: #999999;
}
.img {
	position: relative;
	width: 210rpx;
	height: 210rpx;
	display: inline-block;
	margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.img image {
	width: 100%;
	height: 210rpx;
	display: inline-block;
}