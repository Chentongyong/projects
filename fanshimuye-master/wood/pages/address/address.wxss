/* pages/address/address.wxss */

.address_list {
    width: 750rpx;
    overflow-x: hidden;
}

.address_list .address_cell {
    border-bottom: 16rpx solid #f6f6f6;
    position: relative;
}

.address_list .address_data {
    width: calc(750rpx - 80rpx);
    padding: 0 40rpx;
    transition: .2s;
}

.address_list .address_data .link_data {
    padding: 40rpx 0 30rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.address_list .address_data .link_data .link_top {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    line-height: 45rpx;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}

.address_list .address_data .link_data .link_top .link_name {
    margin-right: 25rpx;
}

.address_list .address_data .link_desc {
    font-size: 26.01rpx;
    padding-top: 10rpx;
    color: #999;
}

.address_list .options_box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0 40rpx;
}

.address_list .options_box .set_deafult {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.address_list .options_box .set_deafult .check {
    width: 24rpx;
    height: 24rpx;
    display: block;
    margin-right: 12rpx;
}

.address_list .options_box .set_deafult .set_tips {
    font-size: 24rpx;
    color: #080002;
}

.address_list .options_box .btn {
    color: #959595;
    font-size: 24rpx;
}

.address_list .del_btn {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    transition: .2s;
    display: flex;
    justify-content: flex-start;
    z-index: 100;
    width: 0;
}

.address_list .del_btn .btn {
    flex: 1;
    overflow: hidden;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f36449;
}

.submit {
    margin: 100rpx 40rpx 0;
    border-radius: 5rpx;
    background: #333;
    color: #fff;
    text-align: center;
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.contact-fixed {
    bottom: 150rpx;
}