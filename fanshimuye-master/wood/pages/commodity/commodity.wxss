.tabList {
    position: absolute;
    left: 0;
    right: 0;
    background: #fff;
    z-index: 1000;
    top: 100rpx;
    display: -webkit-box;
    overflow-x: auto;
    padding-left: 40rpx;
    height: 100rpx;
    -webkit-box-align: center;
    border-bottom:1rpx solid #ebebeb;
}

.tabList .tabCell {
    font-size: 28rpx;
    color: #333;
    margin-right: 65rpx;
    line-height: 100rpx;
}

.tabList .tabCell:last-child {
    padding-right: 40rpx;
}

.tabList .active {
    font-weight: bold;
    position: relative;
}

.tabList .active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #333;
    border-radius: 50rpx;
}

.tabList .active:last-child::after {
    right: 40rpx;
}
