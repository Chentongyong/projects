/* pages/mine/mine.wxss */

.mine_data {
    padding: 40rpx;
    position: relative;
}

.mine_data .member_data {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.mine_data .member_data .avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: block;
    margin-right: 38rpx;
    background: #eee;
}

.mine_data .member_data .member_name {
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
}

.msg_box {
    position: absolute;
    top: 28rpx;
    right: 40rpx;
    z-index: 100;
}

.msg_box .notice {
    width: 40rpx;
    height: 40rpx;
    display: block;
}

.msg_box .dotted {
    position: absolute;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background: #eb6950;
    top: 0rpx;
    right: -3rpx;
}

.mine_other {
    border-top: 14rpx solid #f6f6f6;
}

.mine_order {
    padding: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.mine_order .order_cell{
    width: 20%;
    position: relative
}
.mine_order .order_cell .order_fu{ 
  display: block;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 50%;
  background: red;
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  top: -5rpx;
  right: -5rpx
}
.mine_order .order_cell .order_icon {
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: 0 auto;
}

.mine_order .order_cell .order_title {
    text-align: center;
    margin-top: 10rpx;
    font-size: 22rpx;
    color: #333;
}

.ad_box {
    width: 100%;
}

.ad_box .ad {
    width: 100%;
    display: block;
    height: 220rpx;
}

.mine_options {
    padding: 10rpx 40rpx 0;
}

.mine_options .options_cell {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 30rpx 0 40rpx;
    position: relative;
}

.mine_options .options_cell .options_icon {
    width: 50rpx;
    height: 50rpx;
    display: block;
    margin-right: 20rpx;
}

.mine_options .options_cell .right_data {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
    overflow: hidden;
}

.mine_options .options_cell .right_data .right_title {
    font-size: 28rpx;
    color: #333;
}

.mine_options .options_cell .right_data .arrow {
    width: 13rpx;
    height: 22rpx;
}

.mine_options .options_cell:after {
    content: "";
    position: absolute;
    left: 70rpx;
    right: 0;
    bottom: 0;
    height: 1rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.mine_options .options_cell:last-child::after {
    border: none;
}

.min_icon{
    width: 13rpx;
    height: 22rpx;
    margin-left: 15rpx;
}
.activity{
    display: flex;
    justify-content: space-between;
    width: 515rpx;
    margin-top: 10rpx; 
}
.activity_hont{
    font-size: 24rpx;
    font-weight: 400;
    color: #999;
    display: flex;
    align-items: center;
}
.integral{
    font-size: 26rpx;
    color: #333;
    font-weight: 400;
}
.nickname{
  width: 400rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}