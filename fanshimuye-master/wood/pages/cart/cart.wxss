/* pages/cart/cart.wxss */

.cart {
    padding-bottom: 120rpx;
    width: 750rpx;
    overflow-x: hidden;
}

.cart_cell {
    border-bottom: 16rpx solid #f6f6f6;
    position: relative;
}

.cart_cell:last-child {
    border: none;
}

.goods_data {
    width: calc(750rpx - 80rpx);
    padding: 40rpx;
    transition: .2s;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.goods_data .check {
    width: 32rpx;
    height: 32rpx;
    display: block;
    margin-right: 38rpx;
}

.goods_data .right_data {
    flex: 1;
    overflow: hidden;
    display: flex;
    justify-content: flex-start;
}

.goods_data .right_data .goods_thumb {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin-right: 35rpx;
}

.goods_data .right_data .goods_msg {
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    flex: 1;
    overflow: hidden;
}

.goods_data .right_data .goods_msg .msg_top .title {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.goods_data .right_data .goods_msg .msg_top .spec {
    font-size: 24rpx;
    color: #999;
    padding-top: 20rpx;
}

.goods_data .right_data .goods_msg .bottom_options {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.goods_data .right_data .goods_msg .bottom_options .price {
    flex: 1;
    overflow: hidden;
    font-size: 28rpx;
    color: #f36449;
}

.goods_data .right_data .goods_msg .bottom_options .num_options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid #d6dbe2;
    border-radius: 8rpx;
    overflow: hidden;
}

.goods_data .right_data .goods_msg .bottom_options .num_options .options {
    width: 48rpx;
    height: 48rpx;
    display: block;
}

.goods_data .right_data .goods_msg .bottom_options .num_options .num {
    border-left: 1rpx solid #d6dbe2;
    border-right: 1rpx solid #d6dbe2;
    width: 70rpx;
    color: #333;
    font-size: 28rpx;
    text-align: center;
    height: 48rpx;
    line-height: 48rpx;
}

.del_btn {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    transition: .2s;
    display: flex;
    justify-content: flex-start;
    z-index: 100;
    width: 0;
}

.del_btn .btn {
    flex: 1;
    overflow: hidden;
    color: #fff;
    font-size: 28rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f36449;
}

.bottom_fixed {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 109rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    border-top: 1rpx solid #ebebeb;
}

.bottom_fixed .left_data {
    padding-left: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 30rpx;
    flex: 1;
    overflow: hidden;
}

.bottom_fixed .left_data .check_all {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.bottom_fixed .left_data .check_all .check-icon {
    width: 32rpx;
    height: 32rpx;
    display: block;
    margin-right: 38rpx;
}

.bottom_fixed .left_data .account {
    flex: 1;
    overflow: hidden;
    text-align: right;
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    word-break: break-all;
    word-wrap: break-word;
}

.bottom_fixed .left_data .account .red {
    color: #f36449;
    font-size: 34rpx;
}

.bottom_fixed .right_options {
    width: 316rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.bottom_fixed .right_options .btn {
    flex: 1;
    overflow: hidden;
    font-size: 28rpx;
    font-weight: bold;
    height: 109rpx;
    line-height: 109rpx;
}

.bottom_fixed .right_options .gery {
    color: #333;
    background: #eee;
}

.bottom_fixed .right_options .black {
    color: #fff;
    background: #333;
}