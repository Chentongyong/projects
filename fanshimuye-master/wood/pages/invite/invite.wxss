.goods_msg {
    padding: 40rpx;
    border-bottom:16rpx solid #f6f6f6;

}

.goods_msg .goods_title {
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.goods_msg .goods_data {
    display: flex;
    justify-content: space-between;
}

.goods_msg .goods_data .goods_thumb {
    width: 200rpx;
    height: 200rpx;
    display: block;
    margin-right: 25rpx;
}

.goods_msg .goods_data .goods_other {
    flex: 1;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.goods_msg .goods_top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.goods_msg .goods_top .goods_title {
    flex: 1;
    overflow: hidden;
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.goods_msg .goods_top .goods_price {
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}

.goods_msg .goods_num {
    font-size: 26rpx;
    color: #999999;
    font-weight: bold;
    padding-top: 20rpx;
}

.goods_msg .goods_spec {
    font-size: 30rpx;
    color: #F36449;
}


.particulars{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 48rpx 40rpx 0;
    box-sizing: border-box;
}
.residue{
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
}
.success{
    font-size: 24rpx;
    color: #999;
    margin: 24rpx 0;
}
.residue-hont{
    font-size: 24rpx;
    color: #333;
    margin-right: 8rpx;
}
.time_box{
    width: 40rpx;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    background: #333;
    font-size: 24rpx;
    border-radius: 10rpx;
    margin: 0 8rpx;
}
.count_down{
    height: 40rpx;
    display: flex;
    align-items: center;
}
.user_img_box{
  width: 100%;
  height: 244rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 64rpx 40rpx 75rpx;
  box-sizing: border-box;
  
}
.user_img{
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}
.invite_friend{
  width: 670rpx;
  height: 88rpx;
  margin:0 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  background: #333;
  border-radius: 10rpx;
  margin-bottom: 90rpx;
}
.notice_box{
  width: 670rpx;
  margin: 0 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;

}
.notice_titlo{
  color:#333;
  font-size:28rpx;
  font-weight: 600;
  margin-bottom:20rpx; 
}

.colonel{
  position: relative;
  z-index: 1
}
.colonel::after{
  content: '团长';
  width: 76rpx;
  height: 32rpx;
  position: absolute;
  bottom: 0;
  left: 14rpx;
  background: #F36449;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.border{
  border: 2rpx solid #F36449;
}