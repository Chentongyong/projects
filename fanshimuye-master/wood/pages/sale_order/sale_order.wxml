<!--pages/sale_order/sale_order.wxml-->
<view class="order">
    <view class="list">
        <view class="list_cell" wx:for="{{list}}" wx:key="{{index}}">
            <view class="order_code">
                <view class="code">订单号<text class="code_number">{{item.order_no}}</text></view>
                <view class="status" wx:if="{{item.status == 1}}">售后申请中</view>
                <view class="status" wx:elif="{{item.status == 2}}">售后已通过</view>
                <view class="status" wx:elif="{{item.status == 3}}">用户已寄回</view>
                <view class="status" wx:elif="{{item.status == 4}}">售后已退款</view>
                <view class="status" wx:elif="{{item.status == 5}}">售后已换货</view>
                <view class="status" wx:elif="{{item.status == -1}}">售后已取消</view>
                <view class="status" wx:elif="{{item.status == 0}}">售后已拒绝</view>
            </view>
            <navigator url="/pages/orderDetail/orderDetail?id={{item.id}}&type=2" hover-class="noHover" class="goods_box">
                <view class="goods_msg" wx:for="{{item.goods}}" wx:key="{{index}}">
                    <image mode="aspectFill" src="{{item.spec_img || 'https://dummyimage.com/165/f0f0f0/f0f0f0.png'}}" class="goods_thumb"></image>
                    <view class="goods_data">
                        <view class="goods_top">
                            <view class="goods_title a_row">{{item.title}}</view>
                            <view class="goods_time">{{item.spec_name}}</view>
                        </view>
                        <view class="goods_price">￥{{item.price}}</view>
                    </view>
                </view>
            </navigator>
            <view class="order_options">
                <navigator class="btn white" url="/pages/orderDetail/orderDetail?id={{item.id}}&type=2" hover-class="noHover">
                    查看订单
                </navigator>
            </view>
        </view>
    </view>
</view>
<view class="loading" wx:if="{{loading}}">
    <image mode="aspectFit" src="../../static/icons/loading.gif"></image>
</view>
<view class="noMore" wx:if="{{!isload}}">暂无更多</view>
<navigator hover-class="noHover" class="contact-fixed" url="/pages/chat/chat" open-type="switchTab">
    <image mode="aspectFit" src="../../static/icons/contact.png" class="contact-icon"></image>
</navigator>