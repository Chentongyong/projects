/* pages/goodsDetail/goodsDetail.wxss */

.goods_detail {
    height: 100vh;
}

.banner_box {
    position: relative;
    height: 1000rpx;
}

.banner_box .banner {
    height: 1000rpx;
}

.banner_box .banner .banner-item {
    height: 1000rpx;
    width: 750rpx;
    display: block;
}

.banner_box .banner .banner-item image {
    width: 100%;
    height: 100%;
    display: block;
}

.outline {
    position: fixed;
    bottom: 50%;
    right: 0;
    z-index: 1000;
}

.outline .icon {
    width: 224rpx;
    height: 55rpx;
    display: block;
    /* border-radius: 50%; */
}

.goods_data {
    padding: 35rpx 0 40rpx;
    margin: 0 40rpx;
    border-bottom: 1rpx solid #ebebeb;
}

.goods_data .title_box {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.goods_data .title_box .title {
    flex: 1;
    overflow: hidden;
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}

.goods_data .title_box .collect_box {
    width: 50rpx;
    height: 50rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.goods_data .title_box .collect_box image {
    width: 34rpx;
    height: 34rpx;
    display: block;
}

.goods_data .price {
    margin-top: 30rpx;
    color: #f36449;
    font-size: 40rpx;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.goods_data .sales {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-top: 50rpx;
    font-size: 26rpx;
    color: #999;
    flex-wrap: wrap;
}

.goods_data .sales .sale {
    margin-right: 89rpx;
    word-wrap: break-word;
    word-break: break-all;
}

.goods_data .sales .sale:last-child {
    margin-right: 0;
}

.choose_spec {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 40rpx;
}

.choose_spec .tips {
    font-size: 26rpx;
    color: #333;
    font-weight: bold;
}

.choose_spec .specs {
    flex: 1;
    overflow: hidden;
    font-size: 26rpx;
    color: #333;
    margin-left: 45rpx;
}

.choose_spec .arrow {
    width: 13rpx;
    height: 22rpx;
    display: block;
    margin-left: 15rpx;
}

.ad_box {
    width: 100%;
    height: 220rpx;
}

.ad_box .ad {
    width: 100%;
    height: 100%;
}

.fixedTab {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: #fff;
    height: 88rpx;
}

.fixedTab .tab_cell {
    font-size: 28rpx;
    color: #333;
    line-height: 88rpx;
}

.fixedTab .active {
    position: relative;
    font-weight: bold;
}

.fixedTab .active::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 4rpx;
    border-radius: 50rpx;
    background: #333;
}

.fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 99999;
}

.detail {
    border-top: 14rpx solid #f6f6f6;
    word-wrap: break-word;
    word-break: break-all;
}

.detail image {
    width: 100% !important;
    display: block;
    margin: 0 auto;
}

.sale_box {
    padding-top: 50rpx;
    border-top: 14rpx solid #f6f6f6;
}

.sale_box .sale_title {
    text-align: center;
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
    padding-bottom: 50rpx;
}

.sale_box .sale_detail {
    word-wrap: break-word;
    word-break: break-all;
}

.sale_box .sale_detail image {
    width: 100% !important;
    display: block;
    margin: 0 auto;
}

.list {
    padding: 50rpx 40rpx 150rpx;
}

.list .recommed_title {
    padding-bottom: 50rpx;
    text-align: center;
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
}

.list .goods_list {
    padding-top: 20rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
}

.list .goods_list .goods_cell {
    padding-bottom: 55rpx;
    width: 326rpx;
    display: block;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    overflow: hidden;
}

.list .goods_list .goods_cell .goods_thumb {
    border-radius: 10rpx;
    width: 326rpx;
    height: 326rpx;
    display: block;
}

.list .goods_list .goods_cell .goods_title {
    text-align: center;
    font-size: 30rpx;
    color: #333;
    margin-top: 20rpx;
    font-weight: bold;
    width: 100%;
}

.list .goods_list .goods_cell .price {
    text-align: center;
    font-size: 28rpx;
    color: #333;
    margin-top: 20rpx;
    font-weight: bold;
    width: 100%;
}

scroll-view {
    height: 100vh;
}

.goodsFixed {
    padding-top: 88rpx;
    height: calc(100vh - 88rpx);
}

.bottom_fixed {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background: #fff;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    height: 109rpx;
    border-top: 1rpx solid #ebebeb;
}

.bottom_fixed .left_options {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.bottom_fixed .left_options .left_cell {
    width: 116rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottom_fixed .left_options .left_cell .icon {
    width: 60rpx;
    height: 60rpx;
    display: block;
}

.bottom_fixed .left_options .left_cell::after {
    content: "";
    position: absolute;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
    width: 1rpx;
    height: 70rpx;
    border-right: 1rpx solid #ebebeb;
}

.bottom_fixed .right_options {
    flex: 1;
    overflow: hidden;
    display: flex;
    justify-content: flex-end;
    height: 109rpx;
}

.bottom_fixed .right_options .btn {
    flex: 1;
    overflow: hidden;
    padding: 0;
    font-size: 28rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottom_fixed .right_options .white {
    color: #333;
}

.bottom_fixed .right_options .black {
    background: #333;
    color: #fff;
}

.contact-fixed {
    bottom: 120rpx;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99999999;
    background: rgba(0, 0, 0, .5);
    display: flex;
    justify-content: flex-end;
    flex-direction: column;
}

.mask .close_bg {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
}

.mask .spec_content {
    background: #fff;
    position: relative;
}

.mask .spec_content .close_icon {
    position: absolute;
    top: 44rpx;
    right: 38rpx;
    width: 50rpx;
    height: 50rpx;
    display: flex;
    justify-content: flex-end;
    align-items: flex-start;
}

.mask .spec_content .close_icon .close {
    width: 26rpx;
    height: 25rpx;
    display: block;
}

.mask .spec_content .spec_goods {
    display: flex;
    justify-content: flex-start;
    align-items: flex-end;
    padding: 40rpx 40rpx 36rpx;
    border-bottom: 14rpx solid #f6f6f6;
}

.mask .spec_content .spec_goods .goods_thumb {
    border-radius: 5rpx;
    border: 1rpx solid #d6dbe2;
    box-sizing: border-box;
    width: 165rpx;
    height: 165rpx;
    margin-right: 25rpx;
}

.mask .spec_content .spec_goods .spec_other_msg .price {
    padding-bottom: 30rpx;
    font-size: 40rpx;
    color: #f36449;
    font-weight: bold;
}

.mask .spec_content .spec_goods .spec_other_msg .sales {
    font-size: 24rpx;
    color: #333;
}

.mask .spec_list {
    max-height: 525rpx;
    padding: 0 40rpx 66rpx;
    overflow-y: auto;
}

.mask .spec_list .spec_cell {
    padding-top: 50rpx;
}

.mask .spec_list .spec_cell .title {
    font-size: 30rpx;
    color: #333;
}

.mask .spec_list .spec_cell .specs {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.mask .spec_list .spec_cell .spec {
    min-width: 310rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
    border: 1rpx solid #d6dbe2;
    line-height: 72rpx;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    margin-top: 33rpx;
}

.mask .spec_list .spec_cell .active {
    color: #333333;
    font-weight: bold;
    border-color: #333;
}

.mask .choose_num {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 40rpx;
}

.mask .choose_num .num_tips {
    font-size: 30rpx;
    color: #333;
}

.mask .choose_num .num_options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1rpx solid #d6dbe2;
    border-radius: 5rpx;
}

.mask .choose_num .num_options .options {
    width: 73rpx;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 50rpx;
    color: #999;
}

.mask .choose_num .num_options .num {
    border-left: 1rpx solid #d6dbe2;
    border-right: 1rpx solid #d6dbe2;
    width: 114rpx;
    color: #333;
    font-size: 34rpx;
    text-align: center;
    height: 72rpx;
    line-height: 72rpx;
}

.mask .cart_options {
    padding: 50rpx 40rpx;
    display: flex;
}

.mask .cart_options .btn {
    border-radius: 6rpx;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    background: #333;
    padding: 0;
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
}

