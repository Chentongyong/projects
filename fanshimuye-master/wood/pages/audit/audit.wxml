<!--pages/audit/audit.wxml-->
<import src="../../wxParse/wxParse.wxml" />
<view class="enter">
  <!-- <view class="enterImg" wx:if="{{poster!=''}}"> -->
  <view class="enterImg">
    <image src="{{poster}}" class="imgs"></image>
  </view>

  <view class="message">
    <view class="messTitle">
      欢迎加入
      <text class="text">木小凡商城</text> ，完善入驻资料，即可快 速成为店主，享受特权。</view>
    <view class="messageBox">
      <view class="boxLeft">
        <text>姓名</text>
        <image src="../../static/enter2.jpg"></image>
      </view>
      <input bindinput="nameFun"></input>
    </view>
    <view class="messageBox">
      <view class="boxLeft">
        <text>手机号</text>
        <image src="../../static/enter2.jpg"></image>
      </view>
      <input type="number" bindinput="phoneFun"></input>
    </view>
  </view>

  <view class="agreement">
    <view class="agreetop">
      <view class="agreeLeft" bindtap="protocol">
        <image src="../../static/tg.png" wx:if="{{isCheck==true}}"></image>
      </view>
      <view class="agreeRight">
        我已经阅读并了解了
        <text class="texts" catchtap="openDeal">【入驻协议】</text> 。
      </view>
    </view>
    <button bindtap="submit">提交申请</button>
  </view>

  <view class="discounts">
    <!-- <view class="discountsTop">
      <view class="topBox">
        <image src="../../static/enter3.jpg"></image>
        <text>申请成为小店店主</text>
      </view>
      <view class="topBox">
        <image src="../../static/enter4.jpg"></image>
        <text>成交价1%积分抵扣</text>
      </view>
      <view class="topBox">
        <image src="../../static/enter5.jpg"></image>
        <text>精选商品专属优惠</text>
      </view>
      <view class="topBox">
        <image src="../../static/enter6.png"></image>
        <text>您拥有独立的手机分销管理后台</text>
      </view>
    </view> -->
    <view class="discountsBut">
      <text>您可以获得加盟商权限 </text>
      <!-- <view class="discountsButZi">（入驻成功，可以获得产品独立价格。线 下一个门店，线上一个地板商城）</view> -->
      <view class="discountsButZi">
        <template is="wxParse" data="{{wxParseData:contents.nodes}}" />
      </view>
    </view>
  </view>
</view>
<!-- 注册协议 -->
<view class="deal_pop" wx:if="{{showDeal}}" bindtap="offDeal">
  <view class="deal_content">
    <view class="deal_title">注册协议及隐私政策</view>
    <view class="content">
      <template is="wxParse" data="{{wxParseData:content.nodes}}" />
    </view>
    <view class="options_box">
      <button class="option_btn white" hover-class="noHover" bindtap="cancel">不同意</button>
      <button class="option_btn black" hover-class="noHover" bindtap="confirm">同意</button>
    </view>
  </view>
</view>