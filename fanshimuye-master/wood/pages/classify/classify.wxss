/* pages/classify/classify.wxss */

.box {
    display: flex;
    justify-content: flex-start;
}

.guide_list {
    width: 180rpx;
    padding-top: 27rpx;
    height: calc(100vh - 27rpx);
    overflow-y: auto;
}

.guide_list .guide_cell {
    padding: 37rpx 0;
    font-size: 26rpx;
    color: #333;
    text-align: center;
}

.guide_list .guide_cell .guide_title {
    position: relative;
}

.guide_list .active .guide_title {
    font-weight: bolder;
}

.guide_list .active .guide_title:after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -16rpx;
    width: 102rpx;
    height: 4rpx;
    border-radius: 50rpx;
    background: #333;
    margin: 0 auto;
}

.classify_box {
    flex: 1;
    overflow: hidden;
    margin-left: 40rpx;
    margin-right: 40rpx;
    padding-top: 64rpx;
    height: calc(100vh - 64rpx);
    overflow-y: auto;
}

.classify_box .ad_img {
    width: 100%;
    height: 195rpx;
    display: block;
    border-radius: 5rpx;
}

.classify_box .ad_img image {
    width: 100%;
    height: 100%;
    display: block;
    border-radius: 5rpx;
}

.classify_box .classify_list {
    margin-top: 50rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: flex-start;
}

.classify_box .classify_list .classify_cell {
    width: 234rpx;
    /* margin-right: 50rpx; */
    margin-bottom: 55rpx;
}

.classify_box .classify_list .classify_cell .classify_thumb {
    width: 234rpx;
    height: 252rpx;
    border-radius: 5rpx;
    display: block;
}

.classify_box .classify_list .classify_cell:nth-child(3n+3) {
    margin-right: 0;
}

.classify_box .classify_list .classify_cell .classify_title {
    text-align: center;
    font-size: 24rpx;
    color: #333;
    margin-top: 20rpx;
    word-wrap: break-word;
    word-break: break-all;
}