<view>
  <view class="bing_box">
    <view class="bing">
      <text>营业额</text>
      <text class="bing_money">￥{{turnover}}</text>
    </view>
  </view>

  <view class="bing_box">
    <view class="bing_time">
      <view>时间筛选</view>
      <view class="time">

        <picker mode="date" value="{{time}}" start="2015-02-01" bindchange="bindDateChange">
          <view class="time_start">
            <text>{{time}}</text>
            <text wx:if="{{time == ''}}">请选择时间</text>
            <image class="time_img" src="/static/icons/tt.png"></image>
          </view>
        </picker>
        

        <picker mode="date" value="{{date2}}" start="2015-02-01" bindchange="bindDateChange2">
          <view class="time_start">
            <text>{{time2}}</text>
            <text wx:if="{{time2 == ''}}">请选择时间</text>
            <image class="time_img" src="/static/icons/tt.png"></image>
          </view>
        </picker>

      </view>
    </view>
  </view>
  <view class="tab_box">
    <view class="tab_tonh {{tab_tonh == 1?'tab_htnd':''}}" data-type="1" bindtap="tab_tonh">待处理</view>
    <view class="tab_tonh {{tab_tonh == 2?'tab_htnd':''}}" data-type="2" bindtap="tab_tonh">已处理</view>
  </view>

  <view class="list">
    <view class="list_cell" wx:for="{{list}}" wx:key="{{index}}">
      <view class="order_code">
        <view class="code">下单时间
          <text class="code_number">{{item.create_at}}</text>
        </view>
        <view class="status" wx:if="{{item.status == 1}}">待处理</view>
        <view class="status" wx:if="{{item.status == 2}}">已处理</view>

      </view>
      <navigator url="/pages/examine/examine?id={{item.id+'&stype='+tab_tonh}}" hover-class="noHover" class="goods_box">
        <view class="goods_msg" wx:for="{{item.goods}}" wx:key="{{index}}">
          <image mode="aspectFill" src="{{item.spec_img || 'https://dummyimage.com/165/f0f0f0/f0f0f0.png'}}" class="goods_thumb"></image>
          <view class="goods_data">
            <view class="goods_top">
              <view class="goods_title a_row">
                <view>{{item.title}}</view>
              </view>
              <view class="goods_time">{{item.spec_name}}</view>
            </view>
            <view class="goods_price">
              <text>￥{{item.price * item.num}}</text>
            </view>
          </view>
        </view>
      </navigator>
      <view class="order_options">
        <navigator class="btn white" url="/pages/examine/examine?id={{item.id}}" hover-class="noHover">
          查看订单
        </navigator>
        <button class="btn black" hover-class="noHover" bindtap="pay" wx:if="{{tab_tonh == 1}}" data-id="{{item.id}}" data-goods="{{item.goods}}" data-index="{{index}}">去付款</button>
      </view>
    </view>
  </view>
</view>